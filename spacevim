" Let Vim and NeoVim shares the same plugin directory.
" Comment it out if you don't like
let g:spacevim_plug_home = '~/.vim/plugged'

" Enable the existing layers in space-vim
function! Layers()

  " Default layers
  Layer 'fzf'
  Layer 'unite'
  Layer 'better-defaults'

  " Custom layers
  Layer 'airline'
  Layer 'programming'
  Layer 'code-snippets'
  Layer 'editing'
  Layer 'auto-completion'
  Layer 'python'
  Layer 'docker'
  Layer 'text-align'
  Layer 'ctrlp'

endfunction

" Add your own plugins
function! UserInit()

  " let g:spacevim_leader = "<\Space>"
  let g:spacevim_localleader = ','

  " Install personal plugins
  Plug 'jiangmiao/auto-pairs'
  Plug 'szw/vim-smartclose'
  Plug 'tkhoa2711/vim-togglenumber'
  Plug 'vim-scripts/togglenumber'

endfunction

" Override the default settings as well as adding extras
function! UserConfig()

  " If you have installed the powerline fonts and want to enable airline layer
  let g:airline_powerline_fonts=1
  color space-vim-dark

  " Use gui colors in terminal if available
  if has('termguicolors')
    set termguicolors
    if g:spacevim_tmux
      " If use vim inside tmux, see https://github.com/vim/vim/issues/993
      " set Vim-specific sequences for RGB colors
      let &t_8f = "\<Esc>[38;2;%lu;%lu;%lum"
      let &t_8b = "\<Esc>[48;2;%lu;%lu;%lum"
    endif
  endif
  """ customize config
  "" .bashrc or .zshrc add "stty -ixon"
  nnoremap <C-s> :w<CR>
  inoremap <C-s> <Esc>:w<CR>l
  vnoremap <C-s> <Esc>:w<CR>
  "" keymaps
  noremap <silent><leader>tn :call ToggleNumber()<CR>
  nnoremap <Leader>tp :setlocal paste!<CR>
  nnoremap <Leader>fR :source %<CR>

  inoremap jj <Esc>
  vnoremap v <Esc>
  nnoremap H ^
  nnoremap L $

  "" set
  set vb t_vb=
  set mouse-=a
  set autoread
  set autowriteall
  set wrap

  "" smartclose
  let g:smartclose_default_mapping_key = '<C-g>'

endfunction
